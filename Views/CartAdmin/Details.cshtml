@model Glowry.Models.Cart

@{
    ViewData["Title"] = "Cart Details";
    var cartTotal = Model.CartItems?.Sum(ci => ci.ProductOption.Product.Price * ci.Quantity) ?? 0;
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Cart Details - #@Model.CartId</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }

    <div class="row">
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-user"></i> Customer Info</h5>
                </div>
                <div class="card-body">
                    <p><strong>Username:</strong> @Model.AppUser?.UserName</p>
                    <p><strong>Email:</strong> @Model.AppUser?.Email</p>
                    <p><strong>Cart ID:</strong> #@Model.CartId</p>
                </div>
            </div>

            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-chart-bar"></i> Summary</h5>
                </div>
                <div class="card-body">
                    <p><strong>Items:</strong> @Model.CartItems.Sum(ci => ci.Quantity)</p>
                    <p><strong>Total Value:</strong> <span class="text-success">$@cartTotal.ToString("F2")</span></p>
                    <p class="mb-0">
                        <strong>Status:</strong>
                        @if (Model.CartItems.Any())
                        {
                            <span class="badge badge-success">Active</span>
                        }
                        else
                        {
                            <span class="badge badge-secondary">Empty</span>
                        }
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-list"></i> Cart Items</h5>
                    @if (Model.CartItems.Any())
                    {
                        <form asp-action="ClearCart" method="post" style="display: inline;"
                              onsubmit="return confirm('Clear this cart?');">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.CartId" />
                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="fas fa-trash"></i> Clear Cart
                            </button>
                        </form>
                    }
                </div>
                <div class="card-body">
                    @if (Model.CartItems.Any())
                    {
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th>Option</th>
                                        <th>Price</th>
                                        <th>Qty</th>
                                        <th>Total</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.CartItems)
                                    {
                                        var itemTotal = item.ProductOption.Product.Price * item.Quantity;
                                        <tr>
                                            <td>
                                                <strong>@item.ProductOption.Product.ProName</strong>
                                            </td>
                                            <td>
                                                <span class="badge badge-secondary">
                                                    @item.ProductOption.AttributeName
                                                </span>
                                                @item.ProductOption.AttributeValue
                                            </td>
                                            <td>$@item.ProductOption.Product.Price.ToString("F2")</td>
                                            <td>@item.Quantity</td>
                                            <td><strong>$@itemTotal.ToString("F2")</strong></td>
                                            <td>
                                                <form asp-action="RemoveItem" method="post" style="display: inline;">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                                    <input type="hidden" name="cartId" value="@Model.CartId" />
                                                    <button type="submit" class="btn btn-sm btn-danger">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">This cart is empty.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>