@model IEnumerable<Glowry.Models.Cart>

@{
    ViewData["Title"] = "Cart Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-shopping-cart"></i> Cart Management</h1>
        <div>
            <a asp-action="Statistics" class="btn btn-info">
                <i class="fas fa-chart-bar"></i> Statistics
            </a>
            <a asp-action="AbandonedCarts" class="btn btn-warning">
                <i class="fas fa-exclamation-triangle"></i> Abandoned Carts
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert">&times;</button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-body">
            <form method="get">
                <div class="input-group">
                    <input type="text" name="searchUser" value="@ViewBag.SearchUser"
                           class="form-control" placeholder="Search by username or email..." />
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search"></i> Search
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-redo"></i> Clear
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if (Model.Any())
    {
        <div class="card">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="thead-dark">
                            <tr>
                                <th>Cart ID</th>
                                <th>User</th>
                                <th>Email</th>
                                <th>Items</th>
                                <th>Total Value</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var cart in Model)
                            {
                                var cartTotal = cart.CartItems?.Sum(ci => ci.ProductOption.Product.Price * ci.Quantity) ?? 0;
                                var itemCount = cart.CartItems?.Sum(ci => ci.Quantity) ?? 0;

                                <tr>
                                    <td class="align-middle">
                                        <strong>#@cart.CartId</strong>
                                    </td>
                                    <td class="align-middle">@cart.AppUser?.UserName</td>
                                    <td class="align-middle">@cart.AppUser?.Email</td>
                                    <td class="align-middle">
                                        @if (itemCount > 0)
                                        {
                                            <span class="badge badge-primary badge-pill">@itemCount items</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Empty</span>
                                        }
                                    </td>
                                    <td class="align-middle">
                                        <strong class="text-success">$@cartTotal.ToString("F2")</strong>
                                    </td>
                                    <td class="align-middle">
                                        @if (itemCount > 0)
                                        {
                                            <span class="badge badge-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">Empty</span>
                                        }
                                    </td>
                                    <td class="align-middle">
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@cart.CartId"
                                               class="btn btn-sm btn-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@cart.CartId"
                                               class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card text-white bg-primary">
                    <div class="card-body text-center">
                        <h2>@Model.Count()</h2>
                        <p class="mb-0">Total Carts</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-success">
                    <div class="card-body text-center">
                        <h2>@Model.Count(c => c.CartItems.Any())</h2>
                        <p class="mb-0">Active Carts</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-info">
                    <div class="card-body text-center">
                        <h2>@Model.Sum(c => c.CartItems.Sum(ci => ci.Quantity))</h2>
                        <p class="mb-0">Total Items</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-warning">
                    <div class="card-body text-center">
                        <h2>$@Model.Sum(c => c.CartItems.Sum(ci => ci.ProductOption.Product.Price * ci.Quantity)).ToString("F2")</h2>
                        <p class="mb-0">Total Value</p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle"></i> No carts found.
        </div>
    }
</div>