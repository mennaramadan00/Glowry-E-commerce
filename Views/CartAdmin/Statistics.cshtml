@{
    ViewData["Title"] = "Cart Statistics";
}

<div class="container mt-4">
    <h1><i class="fas fa-chart-bar"></i> Cart Statistics</h1>
    <hr />

    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-primary h-100">
                <div class="card-body text-center">
                    <i class="fas fa-shopping-cart fa-3x mb-3"></i>
                    <h2>@ViewBag.TotalCarts</h2>
                    <p class="mb-0">Total Carts</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-success h-100">
                <div class="card-body text-center">
                    <i class="fas fa-check-circle fa-3x mb-3"></i>
                    <h2>@ViewBag.ActiveCarts</h2>
                    <p class="mb-0">Active Carts</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-warning h-100">
                <div class="card-body text-center">
                    <i class="fas fa-inbox fa-3x mb-3"></i>
                    <h2>@ViewBag.EmptyCarts</h2>
                    <p class="mb-0">Empty Carts</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card text-white bg-info h-100">
                <div class="card-body text-center">
                    <i class="fas fa-box fa-3x mb-3"></i>
                    <h2>@ViewBag.TotalItems</h2>
                    <p class="mb-0">Total Items</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-dollar-sign"></i> Revenue Potential</h5>
                </div>
                <div class="card-body text-center">
                    <h1 class="display-4 text-success">$@ViewBag.TotalValue.ToString("F2")</h1>
                    <p class="text-muted">Total Value in Carts</p>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-calculator"></i> Average Cart Value</h5>
                </div>
                <div class="card-body text-center">
                    <h1 class="display-4 text-info">$@ViewBag.AverageValue.ToString("F2")</h1>
                    <p class="text-muted">Per Active Cart</p>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center">
        <a asp-action="Index" class="btn btn-primary">
            <i class="fas fa-arrow-left"></i> Back to Carts
        </a>
    </div>
</div>