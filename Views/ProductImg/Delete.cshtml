@model Glowry.Models.ProductImg

@{
    ViewData["Title"] = "Delete Product Image";
}

<div class="container mt-4">
    <h1 class="text-danger">Delete Product Image</h1>
    <hr />

    <div class="alert alert-danger">
        <h4><i class="fas fa-exclamation-triangle"></i> Warning!</h4>
        <p>Are you sure you want to delete this image? This will also remove all mappings to product options.</p>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Image to be Deleted</h5>
                </div>
                <img src="@Url.Action("GetImage", "ProductImg", new { id = Model.ImgId })"
                     alt="@Model.Alt"
                     class="card-img-top"
                     style="max-height: 400px; object-fit: contain; background: #f5f5f5;" />
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Product</dt>
                        <dd class="col-sm-8">@(Model.Product?.ProName ?? "General Image")</dd>

                        <dt class="col-sm-4">Alt Text</dt>
                        <dd class="col-sm-8">@(Model.Alt ?? "None")</dd>

                        @if (Model.ImageMaps != null && Model.ImageMaps.Any())
                        {
                            <dt class="col-sm-4">Mapped To</dt>
                            <dd class="col-sm-8">
                                @Model.ImageMaps.Count() option(s)
                            </dd>
                        }
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ImgId" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Confirm Delete
        </button>
        @if (Model.ProductId.HasValue)
        {
            <a asp-action="ManageImages" asp-controller="Product" asp-route-id="@Model.ProductId" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Cancel
            </a>
        }
        else
        {
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Cancel
            </a>
        }
    </form>
</div>