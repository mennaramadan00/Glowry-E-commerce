<!-- ImageMap/Details.cshtml -->
@model Glowry.Models.ImageMap

@{
    ViewData["Title"] = "Mapping Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Image Mapping Details</h1>
        <div>
            <a asp-action="Delete" asp-route-id="@Model.ImgMapId" class="btn btn-danger">
                <i class="fas fa-trash"></i> Delete
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-image"></i> Image</h5>
                </div>
                <img src="@Url.Action("GetImage", "ProductImg", new { id = Model.ImgId })"
                     alt="@Model.ProductImg?.Alt"
                     class="card-img-top"
                     style="max-height: 300px; object-fit: cover;" />
                <div class="card-body">
                    <p><strong>Image ID:</strong> @Model.ImgId</p>
                    <p><strong>Alt Text:</strong> @(Model.ProductImg?.Alt ?? "None")</p>
                    <p><strong>Product:</strong> @Model.ProductImg?.Product?.ProName</p>
                    <a asp-controller="ProductImg" asp-action="Details" asp-route-id="@Model.ImgId" class="btn btn-sm btn-info">
                        View Image Details
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-cog"></i> Product Option</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-5">Product</dt>
                        <dd class="col-sm-7">@Model.ProductOption?.Product?.ProName</dd>

                        <dt class="col-sm-5">Attribute Name</dt>
                        <dd class="col-sm-7"><strong>@Model.ProductOption?.AttributeName</strong></dd>

                        <dt class="col-sm-5">Attribute Value</dt>
                        <dd class="col-sm-7">@Model.ProductOption?.AttributeValue</dd>

                        <dt class="col-sm-5">Stock Quantity</dt>
                        <dd class="col-sm-7">
                            @if (Model.ProductOption?.StockQuantity > 0)
                            {
                                <span class="badge badge-success">@Model.ProductOption.StockQuantity</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Out of stock</span>
                            }
                        </dd>
                    </dl>
                    <a asp-controller="ProductOption" asp-action="Details" asp-route-id="@Model.OptionId" class="btn btn-sm btn-primary">
                        View Option Details
                    </a>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-info-circle"></i> Mapping Info</h5>
                </div>
                <div class="card-body">
                    <p><strong>Mapping ID:</strong> @Model.ImgMapId</p>
                    <p class="mb-0">This mapping connects the image to the product option, allowing customers to see this specific image when they select this variant.</p>
                </div>
            </div>
        </div>
    </div>
</div>
