<!-- ImageMap/Create.cshtml -->
@model Glowry.Models.ImageMap

@{
    ViewData["Title"] = "Create Image Mapping";
}

<div class="container mt-4">
    <h1>Create Image Mapping</h1>
    <hr />

    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="OptionId" class="control-label">Product Option</label>
                    <select asp-for="OptionId" class="form-control" asp-items="ViewBag.OptionId">
                        <option value="">-- Select Option --</option>
                    </select>
                    <span asp-validation-for="OptionId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ImgId" class="control-label">Image</label>
                    <select asp-for="ImgId" class="form-control" asp-items="ViewBag.ImgId">
                        <option value="">-- Select Image --</option>
                    </select>
                    <span asp-validation-for="ImgId" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-link"></i> Create Mapping
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <i class="fas fa-info-circle"></i> About Image Mapping
                </div>
                <div class="card-body">
                    <p>Image mapping connects specific product images to product options (variants).</p>
                    <p><strong>Example:</strong></p>
                    <ul>
                        <li>Map a red product photo to the "Red" color option</li>
                        <li>Map a size chart to the "XL" size option</li>
                    </ul>
                    <p class="mb-0"><strong>Tip:</strong> Use the "Manage Options" page for easier bulk mapping.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
