<!-- ImageMap/Delete.cshtml -->
@model Glowry.Models.ImageMap

@{
    ViewData["Title"] = "Delete Image Mapping";
}

<div class="container mt-4">
    <h1 class="text-danger">Delete Image Mapping</h1>
    <hr />

    <div class="alert alert-warning">
        <h4><i class="fas fa-exclamation-triangle"></i> Confirm Deletion</h4>
        <p>Are you sure you want to remove this image mapping?</p>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Image</h5>
                </div>
                <img src="@Url.Action("GetImage", "ProductImg", new { id = Model.ImgId })"
                     alt=""
                     class="card-img-top"
                     style="max-height: 200px; object-fit: cover;" />
                <div class="card-body">
                    <p><strong>Alt:</strong> @Model.ProductImg?.Alt</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Option</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-6">Product</dt>
                        <dd class="col-sm-6">@Model.ProductOption?.Product?.ProName</dd>

                        <dt class="col-sm-6">Attribute</dt>
                        <dd class="col-sm-6">@Model.ProductOption?.AttributeName</dd>

                        <dt class="col-sm-6">Value</dt>
                        <dd class="col-sm-6">@Model.ProductOption?.AttributeValue</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="ImgMapId" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-unlink"></i> Confirm Delete Mapping
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Cancel
        </a>
    </form>
</div>