@model Glowry.Models.Product

@{
    ViewData["Title"] = "Edit Product";
}

<style>
    :root {
        --pink-50: #FFF5F8;
        --pink-100: #FDE8EF;
        --pink-200: #F9CFDD;
        --pink-400: #ED7AAD;
        --pink-500: #E54D91;
        --pink-600: #DF1A6E;
        --foreground: #3D2933;
        --card: #FDF8FA;
        --border: #EBDEE3;
    }

    body {
        background: #fff;
        color: var(--foreground);
    }

    h1 {
        font-weight: 700;
        color: var(--pink-600);
    }

    /* Card */
    .card-soft {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: 22px;
        padding: 24px;
    }

    /* Inputs */
    .form-control {
        border-radius: 12px;
        border: 1px solid var(--border);
        padding: 10px 14px;
    }

        .form-control:focus {
            border-color: var(--pink-500);
            box-shadow: 0 0 0 0.15rem rgba(229,77,145,.25);
        }

    label {
        font-weight: 500;
    }

    /* Checkbox */
    .form-check-input {
        border-radius: 6px;
        cursor: pointer;
    }

        .form-check-input:checked {
            background-color: var(--pink-500);
            border-color: var(--pink-500);
        }

    /* Buttons */
    .btn-main {
        background: linear-gradient(135deg, var(--pink-500), var(--pink-600));
        border: none;
        color: #fff;
        border-radius: 14px;
        padding: 10px 22px;
        font-weight: 500;
        box-shadow: 0 6px 18px rgba(223,26,110,.25);
        transition: .25s;
    }

        .btn-main:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 24px rgba(223,26,110,.35);
            color: #fff;
        }

    .btn-soft {
        background: var(--pink-100);
        border: 1px solid var(--border);
        color: var(--foreground);
        border-radius: 14px;
        padding: 10px 18px;
        transition: .2s;
    }

        .btn-soft:hover {
            background: var(--pink-200);
        }
</style>

<div class="container mt-4">

    <h1 class="mb-4">Edit Product</h1>

    <div class="row">
        <div class="col-md-8">
            <div class="card-soft">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <input type="hidden" asp-for="ProId" />
                    <input type="hidden" asp-for="CreatedAt" />

                    <div class="form-group mb-3">
                        <label asp-for="ProName"></label>
                        <input asp-for="ProName" class="form-control" />
                        <span asp-validation-for="ProName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ProSlug"></label>
                        <input asp-for="ProSlug" class="form-control" />
                        <span asp-validation-for="ProSlug" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ProDescription"></label>
                        <textarea asp-for="ProDescription" rows="5" class="form-control"></textarea>
                        <span asp-validation-for="ProDescription" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Price"></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">$</span>
                                </div>
                                <input asp-for="Price" type="number" step="0.01" class="form-control" />
                            </div>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="CategoryId">Category</label>
                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-check mb-4">
                        <input asp-for="isfeatured" class="form-check-input" />
                        <label asp-for="isfeatured" class="form-check-label">
                            Featured Product
                        </label>
                    </div>

                    <div class="d-flex gap-3">
                        <button type="submit" class="btn-main">
                            <i class="fas fa-save"></i> Save Changes
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.ProId" class="btn-soft">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
