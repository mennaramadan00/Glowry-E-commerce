@model IEnumerable<Glowry.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<style>
    :root {
        --pink-50: #FFF5F8;
        --pink-100: #FDE8EF;
        --pink-200: #F9CFDD;
        --pink-300: #F3A6C3;
        --pink-400: #ED7AAD;
        --pink-500: #E54D91;
        --pink-600: #DF1A6E;
        --foreground: #3D2933;
        --card: #FDF8FA;
        --accent: #F7D4E2;
        --border: #EBDEE3;
    }

    body {
        background: #FFFFFF;
        color: var(--foreground);
    }

    /* ===== Header ===== */
    h1 {
        font-weight: 700;
        color: var(--pink-600);
    }

    /* ===== Cards / Layout ===== */
    .card-soft {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: 20px;
        padding: 20px;
    }

    /* ===== Buttons ===== */
    .btn-main {
        background: linear-gradient(135deg, var(--pink-500), var(--pink-600));
        color: #fff;
        border: none;
        border-radius: 12px;
        padding: 10px 18px;
        font-weight: 500;
        box-shadow: 0 6px 16px rgba(223,26,110,.25);
        transition: all .25s ease;
    }

        .btn-main:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 22px rgba(223,26,110,.35);
            color: #fff;
        }

    .btn-soft {
        background: var(--pink-100);
        border: 1px solid var(--border);
        color: var(--foreground);
        border-radius: 10px;
        padding: 8px 14px;
        transition: .2s;
    }

        .btn-soft:hover {
            background: var(--pink-200);
        }

    .btn-icon {
        width: 36px;
        height: 36px;
        padding: 0;
        border-radius: 10px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: none;
        color: #fff;
        transition: .2s;
    }

    .btn-view {
        background: #7c6cff;
    }

    .btn-edit {
        background: #f5b400;
    }

    .btn-img {
        background: var(--pink-500);
    }

    .btn-opt {
        background: #20c997;
    }

    .btn-del {
        background: #ff5b5b;
    }

    .btn-icon:hover {
        transform: scale(1.08);
        opacity: .9;
    }

    /* ===== Table ===== */
    .table {
        margin: 0;
    }

        .table thead th {
            border: none;
            background: var(--pink-100);
            color: var(--foreground);
            font-weight: 600;
        }

        .table tbody tr {
            transition: .2s;
        }

            .table tbody tr:hover {
                background: var(--pink-50);
            }

        .table td {
            border-top: 1px solid var(--border);
            vertical-align: middle;
        }

    /* ===== Badges ===== */
    .badge-featured {
        background: var(--pink-500);
        color: #fff;
        padding: 6px 10px;
        border-radius: 20px;
        font-size: 12px;
    }

    .badge-muted {
        background: var(--pink-100);
        color: var(--foreground);
        padding: 6px 10px;
        border-radius: 20px;
        font-size: 12px;
    }

    /* ===== Image ===== */
    .img-box {
        width: 60px;
        height: 60px;
        border-radius: 14px;
        overflow: hidden;
        background: var(--pink-100);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--pink-500);
        font-size: 18px;
    }

    /* ===== Empty State ===== */
    .empty-box {
        background: var(--pink-50);
        border: 1px dashed var(--border);
        border-radius: 20px;
        padding: 40px;
        text-align: center;
    }
</style>

<div class="container mt-4">

    <!-- Header -->
    @if (User.IsInRole("Admin"))
    {
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Products</h1>
        <a asp-action="Create" class="btn-main">
            <i class="fas fa-plus"></i> New Product
        </a>
    </div>}

    <!-- Filters -->
    <div class="card-soft mb-4">
        <div class="row g-3">
            <div class="col-md-6">
                <form method="get" class="d-flex align-items-center gap-2">
                    <select name="categoryId" class="form-control">
                        <option value="">All Categories</option>
                        @foreach (var cat in ViewBag.Categories as List<Glowry.Models.Category>)
                        {
                            <option value="@cat.CategoryId">@cat.CategName</option>
                        }
                    </select>
                    <button class="btn-soft">Filter</button>
                </form>
            </div>

            <div class="col-md-6">
                <form method="get" class="d-flex align-items-center gap-2">
                    <select name="isFeatured" class="form-control">
                        <option value="">All Products</option>
                        <option value="true">Featured</option>
                        <option value="false">Normal</option>
                    </select>
                    <button class="btn-soft">Filter</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="card-soft">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Slug</th>
                        <th>Price</th>
                        <th>Category</th>
                        <th>Status</th>
                        <th>Options</th>
                        <th>Images</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <div class="img-box">
                                    @if (item.ProductImages?.Any() == true)
                                    {
                                        <img src="@Url.Action("GetImage", "ProductImg", new { id = item.ProductImages.First().ImgId })"
                                             style="width:100%;height:100%;object-fit:cover;" />
                                    }
                                    else
                                    {
                                        <i class="fas fa-image"></i>
                                    }
                                </div>
                            </td>
                            <td>@item.ProName</td>
                            <td><code>@item.ProSlug</code></td>
                            <td><strong>$@item.Price.ToString("F2")</strong></td>
                            <td>@item.Category?.CategName</td>
                            <td>
                                @if (item.isfeatured)
                                {
                                    <span class="badge-featured">Featured</span>
                                }
                                else
                                {
                                    <span class="badge-muted">Normal</span>
                                }
                            </td>
                            <td><span class="badge-muted">@item.ProductOptions?.Count()</span></td>
                            <td><span class="badge-muted">@item.ProductImages?.Count()</span></td>
                            <td>
                                <div class="d-flex gap-2">
                                    <a asp-action="Details" asp-route-id="@item.ProId" class="btn-icon btn-view"><i class="fas fa-eye"> Det</i></a>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.ProId" class="btn-icon btn-edit"><i class="fas fa-edit">Ed</i></a>
                                        <a asp-action="ManageImages" asp-route-id="@item.ProId" class="btn-icon btn-img"><i class="fas fa-images">Img</i></a>
                                        <a asp-action="ManageOptions" asp-route-id="@item.ProId" class="btn-icon btn-opt"><i class="fas fa-cog">Op</i></a>
                                        <a asp-action="Delete" asp-route-id="@item.ProId" class="btn-icon btn-del"><i class="fas fa-trash">Del</i></a>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="empty-box mt-4">
            <h5>No products yet</h5>
            <p class="mb-3">Start by creating your first product</p>
            <a asp-action="Create" class="btn-main">Create Product</a>
        </div>
    }
</div>



