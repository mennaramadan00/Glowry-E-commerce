@model IEnumerable<Glowry.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Products</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Product
        </a>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <form method="get" class="form-inline">
                <label class="mr-2">Filter by Category:</label>
                <select name="categoryId" class="form-control mr-2">
                    <option value="">All Categories</option>
                    @foreach (var cat in ViewBag.Categories as List<Glowry.Models.Category>)
                    {
                        <option value="@cat.CategoryId">@cat.CategName</option>
                    }
                </select>
                <button type="submit" class="btn btn-secondary">Filter</button>
            </form>
        </div>
        <div class="col-md-4">
            <form method="get" class="form-inline">
                <label class="mr-2">Featured:</label>
                <select name="isFeatured" class="form-control mr-2">
                    <option value="">All</option>
                    <option value="true">Featured Only</option>
                    <option value="false">Non-Featured</option>
                </select>
                <button type="submit" class="btn btn-secondary">Filter</button>
            </form>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Slug</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Featured</th>
                    <th>Options</th>
                    <th>Images</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (item.ProductImages != null && item.ProductImages.Any())
                            {
                                <img src="@Url.Action("GetImage", "ProductImg", new { id = item.ProductImages.First().ImgId })"
                                     alt="@item.ProName"
                                     style="width: 60px; height: 60px; object-fit: cover;" />
                            }
                            else
                            {
                                <div style="width: 60px; height: 60px; background: #ddd; display: flex; align-items: center; justify-content: center;">
                                    <i class="fas fa-image"></i>
                                </div>
                            }
                        </td>
                        <td>@item.ProName</td>
                        <td><code>@item.ProSlug</code></td>
                        <td><strong>$@item.Price.ToString("F2")</strong></td>
                        <td>@item.Category?.CategName</td>
                        <td>
                            @if (item.isfeatured)
                            {
                                <span class="badge badge-success">Yes</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">No</span>
                            }
                        </td>
                        <td>
                            <span class="badge badge-info">@item.ProductOptions?.Count() options</span>
                        </td>
                        <td>
                            <span class="badge badge-primary">@item.ProductImages?.Count() images</span>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Details" asp-route-id="@item.ProId" class="btn btn-sm btn-info" title="Details">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@item.ProId" class="btn btn-sm btn-warning" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-action="ManageImages" asp-route-id="@item.ProId" class="btn btn-sm btn-success" title="Manage Images">
                                    <i class="fas fa-images"></i>
                                </a>
                                <a asp-action="ManageOptions" asp-route-id="@item.ProId" class="btn btn-sm btn-primary" title="Manage Options">
                                    <i class="fas fa-cog"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ProId" class="btn btn-sm btn-danger" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="fas fa-info-circle"></i> No products found. <a asp-action="Create">Create your first product</a>
        </div>
    }
</div>