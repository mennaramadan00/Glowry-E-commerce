@model IEnumerable<Glowry.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<style>
    :root {
        --pink-50: #FFF5F8;
        --pink-100: #FDE8EF;
        --pink-200: #F9CFDD;
        --pink-300: #F3A6C3;
        --pink-400: #ED7AAD;
        --pink-500: #E54D91;
        --pink-600: #DF1A6E;
        --foreground: #3D2933;
        --card: #FDF8FA;
        --accent: #F7D4E2;
        --border: #EBDEE3;
    }

    body {
        background: #FFFFFF;
        color: var(--foreground);
    }

    /* ===== Header ===== */
    h1 {
        font-weight: 700;
        color: var(--pink-600);
    }

    /* ===== Cards / Layout ===== */
    .card-soft {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: 20px;
        padding: 20px;
    }

    .product-card {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: 20px;
        padding: 0;
        overflow: hidden;
        transition: all .3s ease;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

        .product-card:hover {
            transform: translateY(-8px);
            box-shadow: 0 12px 32px rgba(223, 26, 110, .15);
            border-color: var(--pink-300);
        }

    .product-image {
        width: 100%;
        height: 240px;
        background: var(--pink-100);
        display: flex;
        align-items: center;
        justify-content: center;
        overflow: hidden;
        position: relative;
    }

        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .product-image i {
            font-size: 48px;
            color: var(--pink-400);
        }

    .product-content {
        padding: 20px;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .product-header {
        margin-bottom: 12px;
    }

    .product-name {
        font-weight: 600;
        font-size: 18px;
        color: var(--foreground);
        margin-bottom: 4px;
    }

    .product-slug {
        font-size: 12px;
        color: var(--pink-500);
        font-family: monospace;
    }

    .product-price {
        font-size: 24px;
        font-weight: 700;
        color: var(--pink-600);
        margin: 12px 0;
    }

    .product-meta {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        margin-bottom: 16px;
    }

    .product-footer {
        margin-top: auto;
        padding-top: 16px;
        border-top: 1px solid var(--border);
    }

    /* ===== Buttons ===== */
    .btn-main {
        background: linear-gradient(135deg, var(--pink-500), var(--pink-600));
        color: #fff;
        border: none;
        border-radius: 12px;
        padding: 12px 24px;
        font-weight: 500;
        box-shadow: 0 6px 16px rgba(223,26,110,.25);
        transition: all .25s ease;
        text-decoration: none;
        display: inline-block;
    }

        .btn-main:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 22px rgba(223,26,110,.35);
            color: #fff;
        }

    .btn-soft {
        background: var(--pink-100);
        border: 1px solid var(--border);
        color: var(--foreground);
        border-radius: 10px;
        padding: 8px 14px;
        transition: .2s;
    }

        .btn-soft:hover {
            background: var(--pink-200);
        }

    .btn-action {
        padding: 8px 16px;
        border-radius: 10px;
        border: none;
        font-size: 13px;
        font-weight: 500;
        transition: .2s;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

        .btn-action i {
            font-size: 12px;
        }

    .btn-view {
        background: #7c6cff;
        color: #fff;
    }

    .btn-edit {
        background: #f5b400;
        color: #fff;
    }

    .btn-img {
        background: var(--pink-500);
        color: #fff;
    }

    .btn-opt {
        background: #20c997;
        color: #fff;
    }

    .btn-del {
        background: #ff5b5b;
        color: #fff;
    }

    .btn-action:hover {
        transform: scale(1.05);
        opacity: .9;
        color: #fff;
    }

    /* ===== Badges ===== */
    .badge-featured {
        background: var(--pink-500);
        color: #fff;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 500;
    }

    .badge-muted {
        background: var(--pink-100);
        color: var(--foreground);
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 500;
    }

    .badge-category {
        background: var(--pink-200);
        color: var(--foreground);
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 500;
    }

    .badge-count {
        background: var(--accent);
        color: var(--foreground);
        padding: 4px 10px;
        border-radius: 12px;
        font-size: 11px;
        font-weight: 600;
    }

    /* ===== Empty State ===== */
    .empty-box {
        background: var(--pink-50);
        border: 1px dashed var(--border);
        border-radius: 20px;
        padding: 60px 40px;
        text-align: center;
    }

        .empty-box i {
            font-size: 64px;
            color: var(--pink-300);
            margin-bottom: 20px;
        }

    /* ===== Status Badge on Image ===== */
    .status-badge {
        position: absolute;
        top: 12px;
        right: 12px;
        z-index: 10;
    }
</style>

<div class="container mt-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Products</h1>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn-main">
                <i class="fas fa-plus"></i> New Product
            </a>
        }
    </div>

    <!-- Filters -->
    <div class="card-soft mb-4">
        <div class="row g-3">
            <div class="col-md-6">
                <form method="get" class="d-flex align-items-center gap-2">
                    <select name="categoryId" class="form-control">
                        <option value="">All Categories</option>
                        @foreach (var cat in ViewBag.Categories as List<Glowry.Models.Category>)
                        {
                            <option value="@cat.CategoryId">@cat.CategName</option>
                        }
                    </select>
                    <button class="btn-soft">Filter</button>
                </form>
            </div>

            <div class="col-md-6">
                <form method="get" class="d-flex align-items-center gap-2">
                    <select name="isFeatured" class="form-control">
                        <option value="">All Products</option>
                        <option value="true">Featured</option>
                        <option value="false">Normal</option>
                    </select>
                    <button class="btn-soft">Filter</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Products Grid -->
    @if (Model.Any())
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="product-card">
                        <!-- Product Image -->
                        <div class="product-image">
                            @if (item.ProductImages?.Any() == true)
                            {
                                <img src="@Url.Action("GetImage", "ProductImg", new { id = item.ProductImages.First().ImgId })"
                                     alt="@item.ProName" />
                            }
                            else
                            {
                                <i class="fas fa-image"></i>
                            }

                            <!-- Status Badge -->
                            <div class="status-badge">
                                @if (item.isfeatured)
                                {
                                    <span class="badge-featured">Featured</span>
                                }
                            </div>
                        </div>

                        <!-- Product Content -->
                        <div class="product-content">
                            <div class="product-header">
                                <div class="product-name">@item.ProName</div>
                                <div class="product-slug">@item.ProSlug</div>
                            </div>

                            <div class="product-price">$@item.Price.ToString("F2")</div>

                            <div class="product-meta">
                                @if (item.Category != null)
                                {
                                    <span class="badge-category">
                                        <i class="fas fa-tag"></i> @item.Category.CategName
                                    </span>
                                }
                                <span class="badge-count">
                                    <i class="fas fa-images"></i> @item.ProductImages?.Count()
                                </span>
                                <span class="badge-count">
                                    <i class="fas fa-cog"></i> @item.ProductOptions?.Count()
                                </span>
                            </div>

                            <!-- Actions -->
                            <div class="product-footer">
                                <div class="d-flex flex-wrap gap-2">
                                    <a asp-action="Details" asp-route-id="@item.ProId" class="btn-action btn-view">
                                        <i class="fas fa-eye"></i> View
                                    </a>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.ProId" class="btn-action btn-edit">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a asp-action="ManageImages" asp-route-id="@item.ProId" class="btn-action btn-img">
                                            <i class="fas fa-images"></i> Images
                                        </a>
                                        <a asp-action="ManageOptions" asp-route-id="@item.ProId" class="btn-action btn-opt">
                                            <i class="fas fa-cog"></i> Options
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.ProId" class="btn-action btn-del">
                                            <i class="fas fa-trash"></i> Delete
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-box">
            <i class="fas fa-box-open"></i>
            <h5>No products yet</h5>
            <p class="mb-3">Start by creating your first product</p>
            <a asp-action="Create" class="btn-main">Create Product</a>
        </div>
    }
</div>