@model Glowry.Models.Product

@{
    ViewData["Title"] = "Manage Options";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>Manage Product Options</h1>
            <p class="text-muted">Product: <strong>@Model.ProName</strong></p>
        </div>
        <div>
            <a asp-controller="ProductOption"
               asp-action="Create"
               asp-route-productId="@Model.ProId"
               class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Option
            </a>
            <a asp-action="Details" asp-route-id="@Model.ProId" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Details
            </a>
        </div>
    </div>

    @if (Model.ProductOptions != null && Model.ProductOptions.Any())
    {
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="fas fa-cog"></i> Product Options (@Model.ProductOptions.Count())</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="thead-light">
                            <tr>
                                <th>Attribute Name</th>
                                <th>Attribute Value</th>
                                <th>Stock Quantity</th>
                                <th>Mapped Images</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var option in Model.ProductOptions)
                            {
                                <tr>
                                    <td><strong>@option.AttributeName</strong></td>
                                    <td>
                                        @if (option.AttributeName.ToLower() == "color")
                                        {
                                            <span class="badge badge-primary">@option.AttributeValue</span>
                                        }
                                        else
                                        {
                                            <span>@option.AttributeValue</span>
                                        }
                                    </td>
                                    <td>
                                        @if (option.StockQuantity > 10)
                                        {
                                            <span class="badge badge-success">
                                                <i class="fas fa-check-circle"></i> @option.StockQuantity
                                            </span>
                                        }
                                        else if (option.StockQuantity > 0)
                                        {
                                            <span class="badge badge-warning">
                                                <i class="fas fa-exclamation-triangle"></i> @option.StockQuantity
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">
                                                <i class="fas fa-times-circle"></i> Out of Stock
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (option.ImageMaps != null && option.ImageMaps.Any())
                                        {
                                            <div class="d-flex align-items-center">
                                                @foreach (var map in option.ImageMaps.Take(4))
                                                {
                                                    <img src="@Url.Action("GetImage", "ProductImg", new { id = map.ImgId })"
                                                         alt=""
                                                         style="width: 40px; height: 40px; object-fit: cover; margin-right: 5px;"
                                                         class="rounded border"
                                                         title="@map.ProductImg.Alt" />
                                                }
                                                @if (option.ImageMaps.Count() > 4)
                                                {
                                                    <span class="badge badge-secondary">+@(option.ImageMaps.Count() - 4)</span>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted">
                                                <i class="fas fa-image"></i> No images
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-controller="ProductOption"
                                               asp-action="Details"
                                               asp-route-id="@option.OptionId"
                                               class="btn btn-sm btn-info"
                                               title="Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-controller="ProductOption"
                                               asp-action="Edit"
                                               asp-route-id="@option.OptionId"
                                               class="btn btn-sm btn-warning"
                                               title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-controller="ProductOption"
                                               asp-action="MapImages"
                                               asp-route-id="@option.OptionId"
                                               class="btn btn-sm btn-success"
                                               title="Map Images">
                                                <i class="fas fa-images"></i>
                                            </a>
                                            <a asp-controller="ProductOption"
                                               asp-action="Delete"
                                               asp-route-id="@option.OptionId"
                                               class="btn btn-sm btn-danger"
                                               title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0"><i class="fas fa-chart-bar"></i> Options Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="text-center">
                                    <h3 class="text-primary">@Model.ProductOptions.Count()</h3>
                                    <p class="text-muted">Total Options</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <h3 class="text-success">@Model.ProductOptions.Sum(o => o.StockQuantity)</h3>
                                    <p class="text-muted">Total Stock</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <h3 class="text-info">@Model.ProductOptions.Sum(o => o.ImageMaps?.Count() ?? 0)</h3>
                                    <p class="text-muted">Image Mappings</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="text-center">
                                    <h3 class="text-warning">@Model.ProductOptions.Count(o => o.StockQuantity == 0)</h3>
                                    <p class="text-muted">Out of Stock</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-cog fa-4x text-muted mb-3"></i>
                <h4>No Options Created Yet</h4>
                <p class="text-muted">Product options allow you to create variants like different colors or sizes.</p>
                <a asp-controller="ProductOption"
                   asp-action="Create"
                   asp-route-productId="@Model.ProId"
                   class="btn btn-primary btn-lg">
                    <i class="fas fa-plus"></i> Create Your First Option
                </a>
            </div>
        </div>
    }
</div>