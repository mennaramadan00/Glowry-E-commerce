@model Glowry.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<style>
    :root {
        --pink-50: #FFF5F8;
        --pink-100: #FDE8EF;
        --pink-200: #F9CFDD;
        --pink-400: #ED7AAD;
        --pink-500: #E54D91;
        --pink-600: #DF1A6E;
        --fg: #3D2933;
        --card: #FDF8FA;
        --border: #EBDEE3;
    }

    body {
        background: #fff;
        color: var(--fg);
    }

    h1 {
        color: var(--pink-600);
        font-weight: 700;
    }

    /* Cards */
    .card-soft {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: 22px;
        overflow: hidden;
    }

    .card-soft-header {
        background: linear-gradient(135deg,var(--pink-500),var(--pink-600));
        color: #fff;
        padding: 14px 20px;
        font-weight: 600;
    }

    /* Buttons */
    .btn-main {
        background: linear-gradient(135deg,var(--pink-500),var(--pink-600));
        color: #fff;
        border: none;
        border-radius: 14px;
        padding: 10px 18px;
        box-shadow: 0 6px 18px rgba(223,26,110,.25);
        transition: .25s;
    }

        .btn-main:hover {
            transform: translateY(-2px);
            color: #fff;
        }

    .btn-soft {
        background: var(--pink-100);
        border: 1px solid var(--border);
        border-radius: 14px;
        padding: 10px 18px;
        color: var(--fg);
    }

    /* Badges */
    .badge-main {
        background: var(--pink-500);
        color: #fff;
        border-radius: 20px;
        padding: 6px 12px;
    }

    .badge-soft {
        background: var(--pink-100);
        border-radius: 20px;
        padding: 6px 12px;
    }

    /* Images */
    .img-box {
        border-radius: 16px;
        overflow: hidden;
        border: 1px solid var(--border);
    }

    /* Option buttons */
    .option-btn {
        border-radius: 12px !important;
        padding: 10px 14px;
    }
</style>

<div class="container mt-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Product Details</h1>

        <div class="d-flex gap-2">
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Edit" asp-route-id="@Model.ProId" class="btn-main">
                    <i class="fas fa-edit"></i> Edit
                </a>
            }

            <a asp-action="Index" class="btn-soft">
                <i class="fas fa-arrow-left"></i> Back
            </a>
        </div>
    </div>

    <div class="row">
        <!-- LEFT -->
        <div class="col-md-8">

            <!-- Info -->
            <div class="card-soft mb-4">
                <div class="card-soft-header">
                    <i class="fas fa-box"></i> Product Information
                </div>
                <div class="p-4">
                    <dl class="row mb-0">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.ProName</dd>

                        <dt class="col-sm-3">Slug</dt>
                        <dd class="col-sm-9"><code>@Model.ProSlug</code></dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Model.ProDescription</dd>

                        <dt class="col-sm-3">Price</dt>
                        <dd class="col-sm-9"><strong>$@Model.Price.ToString("F2")</strong></dd>

                        <dt class="col-sm-3">Category</dt>
                        <dd class="col-sm-9">
                            <span class="badge-soft">@Model.Category?.CategName</span>
                        </dd>

                        <dt class="col-sm-3">Featured</dt>
                        <dd class="col-sm-9">
                            @if (Model.isfeatured)
                            {
                                <span class="badge-main"><i class="fas fa-star"></i> Yes</span>
                            }
                            else
                            {
                                <span class="badge-soft">No</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Created</dt>
                        <dd class="col-sm-9">@Model.CreatedAt.ToString("MMM dd, yyyy")</dd>
                    </dl>
                </div>
            </div>

            <!-- Images -->
            <div class="card-soft mb-4">
                @if (User.IsInRole("Admin"))
                {
                    <div class="card-soft-header d-flex justify-content-between">
                        <span><i class="fas fa-images"></i> Images</span>
                        <a asp-action="ManageImages" asp-route-id="@Model.ProId" class="btn btn-light btn-sm">Manage</a>
                    </div>
                }
                <div class="p-4">
                    @if (Model.ProductImages?.Any() == true)
                    {
                        <div class="row">
                            @foreach (var img in Model.ProductImages)
                            {
                                <div class="col-md-3 mb-3">
                                    <div class="img-box">
                                        <img src="@Url.Action("GetImage", "ProductImg", new { id = img.ImgId })"
                                             style="width:100%;height:150px;object-fit:cover;" />
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">No images uploaded</p>
                    }
                </div>
            </div>

            <!-- Add to Cart -->
            <div class="card-soft">
                <div class="card-soft-header">
                    <i class="fas fa-shopping-cart"></i> Add to Cart
                </div>
                <div class="p-4">
                    @if (Model.ProductOptions?.Any() == true)
                    {
                        <form asp-controller="Cart" asp-action="AddToCart" method="post">
                            @Html.AntiForgeryToken()

                            @foreach (var group in Model.ProductOptions.GroupBy(o => o.AttributeName))
                            {
                                <label class="fw-bold">@group.Key</label>
                                <div class="mb-3 d-flex flex-wrap">
                                    @foreach (var opt in group)
                                    {
                                        <label class="btn btn-outline-secondary option-btn m-1 @(opt.StockQuantity == 0 ? "disabled" : "")">
                                            <input type="radio" name="optionId" value="@opt.OptionId" required
                                                   data-stock="@opt.StockQuantity" onchange="updateStockInfo(this)">
                                            @opt.AttributeValue
                                        </label>
                                    }
                                </div>
                            }

                            <div class="mb-3">
                                <label>Quantity</label>
                                <input type="number" id="quantity" name="quantity" class="form-control"
                                       value="1" min="1" max="999">
                                <small id="stock-info" class="text-muted"></small>
                            </div>

                            <button id="add-to-cart-btn" class="btn-main w-100">
                                <i class="fas fa-cart-plus"></i> Add to Cart
                            </button>
                        </form>
                    }
                    else
                    {
                        <div class="alert alert-warning">No options available</div>
                    }
                </div>
            </div>
        </div>

        <!-- RIGHT -->
        <div class="col-md-4">
            <div class="card-soft mb-4">
                <div class="card-soft-header">
                    <i class="fas fa-tools"></i> Quick Actions
                </div>
                <div class="list-group list-group-flush">
                    <a asp-action="Edit" asp-route-id="@Model.ProId" class="list-group-item">Edit Product</a>
                    <a asp-action="ManageImages" asp-route-id="@Model.ProId" class="list-group-item">Manage Images</a>
                    <a asp-action="ManageOptions" asp-route-id="@Model.ProId" class="list-group-item">Manage Options</a>
                    <a asp-action="Delete" asp-route-id="@Model.ProId" class="list-group-item text-danger">Delete</a>
                </div>
            </div>

            <div class="card-soft">
                <div class="card-soft-header">
                    <i class="fas fa-chart-bar"></i> Statistics
                </div>
                <div class="p-4">
                    <p><strong>Images:</strong> @(Model.ProductImages?.Count() ?? 0)</p>
                    <p><strong>Options:</strong> @(Model.ProductOptions?.Count() ?? 0)</p>
                    <p><strong>Stock:</strong> @(Model.ProductOptions?.Sum(o => o.StockQuantity) ?? 0)</p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function updateStockInfo(radio) {
        const stock = parseInt(radio.dataset.stock);
        const info = document.getElementById('stock-info');
        const qty = document.getElementById('quantity');
        const btn = document.getElementById('add-to-cart-btn');

        if (stock <= 0) {
            info.innerHTML = '<span class="text-danger">Out of stock</span>';
            btn.disabled = true;
        } else {
            info.innerHTML = `<span class="text-success">${stock} available</span>`;
            qty.max = stock;
            btn.disabled = false;
        }
    }
</script>
