@model Glowry.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<style>
    :root {
        --pink-50: #FFF5F8;
        --pink-100: #FDE8EF;
        --pink-200: #F9CFDD;
        --pink-400: #ED7AAD;
        --pink-500: #E54D91;
        --pink-600: #DF1A6E;
        --foreground: #3D2933;
        --card: #FDF8FA;
        --border: #EBDEE3;
    }

    body {
        background: #fff;
        color: var(--foreground);
    }

    h1 {
        font-weight: 700;
        color: var(--pink-600);
    }

    /* ===== Card ===== */
    .card-soft {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: 22px;
        padding: 24px;
    }

    /* ===== Form ===== */
    .form-control {
        border-radius: 12px;
        border: 1px solid var(--border);
        padding: 10px 14px;
    }

        .form-control:focus {
            border-color: var(--pink-500);
            box-shadow: 0 0 0 0.15rem rgba(229,77,145,.25);
        }

    label {
        font-weight: 500;
    }

    /* ===== Checkbox ===== */
    .form-check-input {
        border-radius: 6px;
        cursor: pointer;
    }

        .form-check-input:checked {
            background-color: var(--pink-500);
            border-color: var(--pink-500);
        }

    /* ===== Buttons ===== */
    .btn-main {
        background: linear-gradient(135deg, var(--pink-500), var(--pink-600));
        border: none;
        color: #fff;
        border-radius: 14px;
        padding: 10px 20px;
        font-weight: 500;
        box-shadow: 0 6px 18px rgba(223,26,110,.25);
        transition: .25s;
    }

        .btn-main:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 24px rgba(223,26,110,.35);
            color: #fff;
        }

    .btn-soft {
        background: var(--pink-100);
        border: 1px solid var(--border);
        color: var(--foreground);
        border-radius: 14px;
        padding: 10px 18px;
        transition: .2s;
    }

        .btn-soft:hover {
            background: var(--pink-200);
        }

    /* ===== Info Card ===== */
    .info-card {
        background: var(--pink-50);
        border: 1px dashed var(--border);
        border-radius: 22px;
    }

        .info-card h5 {
            color: var(--pink-600);
            font-weight: 600;
        }
</style>

<div class="container mt-4">

    <h1 class="mb-4">Create New Product</h1>

    <div class="row">
        <!-- FORM -->
        <div class="col-md-8">
            <div class="card-soft">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label asp-for="ProName"></label>
                        <input asp-for="ProName" class="form-control" placeholder="Product name" />
                        <span asp-validation-for="ProName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ProSlug"></label>
                        <input asp-for="ProSlug" class="form-control" placeholder="product-slug" />
                        <small class="text-muted">Auto-generated from name</small>
                        <span asp-validation-for="ProSlug" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="ProDescription"></label>
                        <textarea asp-for="ProDescription" rows="5" class="form-control" placeholder="Product description"></textarea>
                        <span asp-validation-for="ProDescription" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Price"></label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">$</span>
                                </div>
                                <input asp-for="Price" type="number" step="0.01" class="form-control" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="CategoryId">Category</label>
                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                                <option value="">Select Category</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-check mb-4">
                        <input asp-for="isfeatured" class="form-check-input" />
                        <label asp-for="isfeatured" class="form-check-label">
                            Featured Product
                        </label>
                    </div>

                    <div class="d-flex gap-3">
                        <button type="submit" class="btn-main">
                            <i class="fas fa-save"></i> Create Product
                        </button>
                        <a asp-action="Index" class="btn-soft">
                            <i class="fas fa-arrow-left"></i> Back
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <!-- INFO -->
        <div class="col-md-4">
            <div class="info-card p-4">
                <h5><i class="fas fa-lightbulb"></i> Next Steps</h5>
                <ul class="mt-3 mb-0">
                    <li>Add product images</li>
                    <li>Create options (sizes / colors)</li>
                    <li>Link images to options</li>
                    <li>Manage stock quantities</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById('ProName').addEventListener('input', function (e) {
            var slug = e.target.value
                .toLowerCase()
                .replace(/[^a-z0-9]+/g, '-')
                .replace(/^-+|-+$/g, '');
            document.getElementById('ProSlug').value = slug;
        });
    </script>
}
