@model Glowry.Models.Product

@{
    ViewData["Title"] = "Manage Images";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1>Manage Images</h1>
            <p class="text-muted">Product: <strong>@Model.ProName</strong></p>
        </div>
        <div>
            <a asp-action="Details" asp-route-id="@Model.ProId" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to Details
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-images"></i> Current Images (@Model.ProductImages?.Count() ?? 0)</h5>
                </div>
                <div class="card-body">
                    @if (Model.ProductImages != null && Model.ProductImages.Any())
                    {
                        <div class="row">
                            @foreach (var img in Model.ProductImages)
                            {
                                <div class="col-md-4 mb-4">
                                    <div class="card">
                                        <img src="@Url.Action("GetImage", "ProductImg", new { id = img.ImgId })"
                                             alt="@img.Alt"
                                             class="card-img-top"
                                             style="height: 200px; object-fit: cover;" />
                                        <div class="card-body">
                                            <p class="card-text small">
                                                <strong>Alt:</strong> @(img.Alt ?? "No alt text")
                                            </p>
                                            <div class="d-flex justify-content-between">
                                                <a asp-controller="ProductImg"
                                                   asp-action="Edit"
                                                   asp-route-id="@img.ImgId"
                                                   class="btn btn-sm btn-warning">
                                                    <i class="fas fa-edit"></i> Edit
                                                </a>
                                                <form asp-controller="ProductImg"
                                                      asp-action="Delete"
                                                      asp-route-id="@img.ImgId"
                                                      method="post"
                                                      onsubmit="return confirm('Are you sure you want to delete this image?');"
                                                      style="display: inline;">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-sm btn-danger">
                                                        <i class="fas fa-trash"></i> Delete
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <i class="fas fa-info-circle"></i> No images uploaded yet. Use the form to upload images.
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-upload"></i> Upload Single Image</h5>
                </div>
                <div class="card-body">
                    <form asp-controller="ProductImg"
                          asp-action="Create"
                          method="post"
                          enctype="multipart/form-data">
                        <input type="hidden" name="productId" value="@Model.ProId" />

                        <div class="form-group">
                            <label>Select Image</label>
                            <input type="file"
                                   name="imageFile"
                                   class="form-control-file"
                                   accept="image/*"
                                   required
                                   id="singleImageInput" />
                            <small class="form-text text-muted">JPG, PNG, GIF (Max 5MB)</small>
                        </div>

                        <div class="form-group">
                            <label>Alt Text</label>
                            <input type="text"
                                   name="alt"
                                   class="form-control"
                                   placeholder="Image description" />
                        </div>

                        <div id="singleImagePreview" class="mb-3" style="display: none;">
                            <img id="singlePreviewImg" src="" alt="Preview" class="img-fluid rounded border" />
                        </div>

                        <button type="submit" class="btn btn-primary btn-block">
                            <i class="fas fa-upload"></i> Upload Image
                        </button>
                    </form>
                </div>
            </div>

            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-images"></i> Upload Multiple Images</h5>
                </div>
                <div class="card-body">
                    <form asp-controller="ProductImg"
                          asp-action="CreateMultiple"
                          method="post"
                          enctype="multipart/form-data">
                        <input type="hidden" name="productId" value="@Model.ProId" />

                        <div class="form-group">
                            <label>Select Multiple Images</label>
                            <input type="file"
                                   name="imageFiles"
                                   class="form-control-file"
                                   accept="image/*"
                                   multiple
                                   required
                                   id="multipleImageInput" />
                            <small class="form-text text-muted">Select multiple images to upload at once</small>
                        </div>

                        <div class="form-group">
                            <label>Alt Text (for all images)</label>
                            <input type="text"
                                   name="alt"
                                   class="form-control"
                                   placeholder="General description" />
                        </div>

                        <div id="multipleImagePreview" class="mb-3"></div>

                        <button type="submit" class="btn btn-info btn-block">
                            <i class="fas fa-upload"></i> Upload All Images
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Single image preview
        document.getElementById('singleImageInput').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('singlePreviewImg').src = e.target.result;
                    document.getElementById('singleImagePreview').style.display = 'block';
                };
                reader.readAsDataURL(file);
            }
        });

        // Multiple images preview
        document.getElementById('multipleImageInput').addEventListener('change', function(e) {
            const preview = document.getElementById('multipleImagePreview');
            preview.innerHTML = '';

            const files = Array.from(e.target.files);
            files.forEach((file, index) => {
                const reader = new FileReader();
                reader.onload = function(e) {
                    const div = document.createElement('div');
                    div.className = 'mb-2';
                    div.innerHTML = `
                        <img src="${e.target.result}" alt="Preview ${index + 1}"
                             class="img-fluid rounded border"
                             style="max-height: 100px;" />
                        <small class="d-block text-muted">${file.name}</small>
                    `;
                    preview.appendChild(div);
                };
                reader.readAsDataURL(file);
            });
        });
    </script>
}