<!-- Product/Delete.cshtml -->
@model Glowry.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-4">
    <h1 class="text-danger">Delete Product</h1>
    <hr />

    <div class="alert alert-danger">
        <h4><i class="fas fa-exclamation-triangle"></i> Warning!</h4>
        <p>Are you sure you want to delete this product? This action cannot be undone.</p>
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Product to be Deleted</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Product Name</dt>
                <dd class="col-sm-9">@Model.ProName</dd>

                <dt class="col-sm-3">Slug</dt>
                <dd class="col-sm-9">@Model.ProSlug</dd>

                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">$@Model.Price.ToString("F2")</dd>

                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Model.Category?.CategName</dd>

                <dt class="col-sm-3">Featured</dt>
                <dd class="col-sm-9">@(Model.isfeatured ? "Yes" : "No")</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="ProId" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Confirm Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Cancel
        </a>
    </form>
</div>