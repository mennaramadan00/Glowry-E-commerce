<!-- Category/Delete.cshtml -->
@model Glowry.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container mt-4">
    <h1 class="text-danger">Delete Category</h1>
    <hr />

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
        </div>
    }

    <div class="alert alert-danger">
        <h4><i class="fas fa-exclamation-triangle"></i> Warning!</h4>
        <p>Are you sure you want to delete this category?</p>
        @if (Model.Products != null && Model.Products.Any())
        {
            <p class="mb-0"><strong>Note:</strong> This category cannot be deleted because it has @Model.Products.Count() product(s) assigned to it.</p>
        }
    </div>

    <div class="row">
        <div class="col-md-5">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">Category to be Deleted</h5>
                </div>
                @if (Model.Img != null)
                {
                    <img src="@Url.Action("GetImage", "Category", new { id = Model.CategoryId })"
                         alt="@Model.CategName"
                         class="card-img-top"
                         style="max-height: 250px; object-fit: cover;" />
                }
                else
                {
                    <div style="height: 250px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); display: flex; align-items: center; justify-content: center;">
                        <i class="fas fa-folder fa-5x text-white opacity-50"></i>
                    </div>
                }
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-5">Name</dt>
                        <dd class="col-sm-7">@Model.CategName</dd>

                        <dt class="col-sm-5">Slug</dt>
                        <dd class="col-sm-7"><code>@Model.CategSlug</code></dd>

                        <dt class="col-sm-5">Products</dt>
                        <dd class="col-sm-7">
                            <span class="badge badge-primary">@(Model.Products?.Count() ?? 0)</span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-7">
            @if (Model.Products != null && Model.Products.Any())
            {
                <div class="card border-warning">
                    <div class="card-header bg-warning">
                        <h5 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Products in This Category</h5>
                    </div>
                    <div class="card-body">
                        <p>The following products are assigned to this category and must be reassigned or deleted first:</p>
                        <ul class="list-group">
                            @foreach (var product in Model.Products)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    @product.ProName
                                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProId" class="btn btn-sm btn-primary">
                                        Reassign
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }
            else
            {
                <div class="card border-success">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="fas fa-check-circle"></i> Safe to Delete</h5>
                    </div>
                    <div class="card-body">
                        <p>This category has no products assigned to it and can be safely deleted.</p>
                        <p class="mb-0"><strong>This action cannot be undone!</strong></p>
                    </div>
                </div>
            }
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="CategoryId" />

        @if (Model.Products == null || !Model.Products.Any())
        {
            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this category?');">
                <i class="fas fa-trash"></i> Confirm Delete
            </button>
        }
        else
        {
            <button type="button" class="btn btn-danger" disabled>
                <i class="fas fa-ban"></i> Cannot Delete (Has Products)
            </button>
        }

        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </form>
</div>