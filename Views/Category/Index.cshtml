@model Glowry.Models.Category

@{
    ViewData["Title"] = "Create Category";

    if (!User.IsInRole("Admin"))
    {
        Context.Response.Redirect("/Home/Index");
        return;
    }
}

<style>
    :root {
        --primary: #E8609C;
        --foreground: #3D2933;
        --bg: #FFFFFF;
        --pink-50: #FFF5F8;
        --pink-100: #FDE8EF;
        --pink-200: #F9CFDD;
        --pink-300: #F3A6C3;
        --pink-400: #ED7AAD;
        --pink-500: #E54D91;
        --pink-600: #DF1A6E;
        --card: #FDF8FA;
        --secondary: #F9F4F6;
        --accent: #F7D4E2;
        --muted: #F5F0F2;
        --border: #EBDEE3;
    }

    body {
        background: var(--bg);
        color: var(--foreground);
    }

    h1 {
        color: var(--pink-600);
        font-weight: 700;
    }

    .form-card {
        background: var(--card);
        border-radius: 16px;
        border: 1px solid var(--border);
        padding: 28px;
        box-shadow: 0 15px 30px rgba(232, 96, 156, 0.15);
    }

    label {
        font-weight: 600;
        margin-bottom: 6px;
    }

    .form-control,
    .form-control-file {
        border-radius: 12px;
        border: 1px solid var(--border);
        padding: 10px 14px;
    }

        .form-control:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 0.2rem rgba(232, 96, 156, 0.25);
        }

    .btn-primary {
        background: var(--primary);
        border: none;
        border-radius: 12px;
        padding: 10px 24px;
        font-weight: 600;
    }

        .btn-primary:hover {
            background: var(--pink-600);
        }

    .btn-secondary {
        background: var(--muted);
        border: 1px solid var(--border);
        border-radius: 12px;
        padding: 10px 24px;
        font-weight: 600;
        color: var(--foreground);
    }

        .btn-secondary:hover {
            background: var(--accent);
        }

    .info-card {
        background: var(--secondary);
        border-radius: 16px;
        border: 1px solid var(--border);
    }

        .info-card .card-header {
            background: var(--primary);
            color: #fff;
            font-weight: 600;
            border-radius: 16px 16px 0 0;
        }

    #imagePreview img {
        border-radius: 14px;
        border: 2px dashed var(--pink-300);
        background: var(--pink-50);
        padding: 6px;
    }
</style>

<div class="container mt-5">
    <h1>Create New Category</h1>
    <hr />

    <div class="row">
        <!-- FORM -->
        <div class="col-md-6">
            <div class="form-card">
                <form asp-action="Create" method="post" enctype="multipart/form-data">

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="form-group mb-3">
                        <label>Category Name</label>
                        <input type="text" name="categName" id="categName"
                               class="form-control"
                               placeholder="Dresses, Shoes..."
                               required />
                    </div>

                    <div class="form-group mb-3">
                        <label>Category Slug</label>
                        <input type="text" name="categSlug" id="categSlug"
                               class="form-control"
                               placeholder="dresses, shoes..."
                               required />
                        <small class="text-muted">
                            Lowercase – hyphens only
                        </small>
                    </div>

                    <div class="form-group mb-3">
                        <label>Category Image</label>
                        <input type="file" name="imageFile" id="imageFile"
                               class="form-control-file"
                               accept="image/*" />
                    </div>

                    <div id="imagePreview" class="mb-4" style="display:none;">
                        <label class="d-block mb-2">Image Preview</label>
                        <img id="previewImg" class="img-fluid" style="max-height:200px;" />
                    </div>

                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Create
                        </button>

                        <a asp-action="Index" class="btn btn-secondary">
                            Back
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <!-- TIPS -->
        <div class="col-md-6">
            <div class="card info-card">
                <div class="card-header">
                    <i class="fas fa-info-circle"></i> Category Tips
                </div>
                <div class="card-body">
                    <ul>
                        <li>Names should be clear</li>
                        <li>2–3 words max</li>
                        <li>Slug = lowercase + hyphens</li>
                        <li>Image: 800×600 recommended</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById('categName').addEventListener('input', function (e) {
            const slug = e.target.value
                .toLowerCase()
                .replace(/[^a-z0-9]+/g, '-')
                .replace(/^-+|-+$/g, '');
            document.getElementById('categSlug').value = slug;
        });

        document.getElementById('imageFile').addEventListener('change', function (e) {
            const file = e.target.files[0];
            if (!file) return;

            const reader = new FileReader();
            reader.onload = function (ev) {
                document.getElementById('previewImg').src = ev.target.result;
                document.getElementById('imagePreview').style.display = 'block';
            };
            reader.readAsDataURL(file);
        });
    </script>
}
