@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@{
    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Glowry</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
</head>

<body>

    <!-- ================= Navbar ================= -->
    <header>
        <nav class="navbar navbar-expand-lg bg-white py-3">
            <div class="container">

                <!-- Logo -->
                <a class="navbar-brand glowry-brand"
                   asp-controller="Home" asp-action="Index">
                    Glowry
                </a>

                <!-- Mobile Toggle -->
                <button class="navbar-toggler" type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#glowryNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Links -->
                <div class="collapse navbar-collapse justify-content-center" id="glowryNav">
                    <ul class="navbar-nav gap-4">
                      
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Product" asp-action="Index">Products</a>
                            </li>
                         
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Products" asp-action="Makeup">Contact us</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Products" asp-action="BestSellers">About</a>
                            </li>
                              @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Orders" asp-action="GetUserOrders">My Orders</a>
                            </li>
                            <li class="nav-item">
                            <a class="nav-link" asp-controller="Cart" asp-action="Index">Cart</a>
                            </li>
                            <li class="nav-item">
                            <a class="nav-link" asp-controller="Orders" asp-action="GetUserOrders">My account</a>
                            </li>

                        }

                       
                    </ul>
                </div>

                <!-- Icons -->
                <div class="glowry-icons d-flex align-items-center gap-3">

                    @if (User.Identity.IsAuthenticated)
                    {
                        <!-- Logged in -->
                        @* <span class="fw-semibold text-muted">
                            Hello @User.Identity.Name
                        </span> *@

                        <form asp-area="Identity"
                              asp-page="/Account/Logout"
                              method="post"
                              class="d-inline">
                            <button type="submit" class="btn btn-link p-0" >
                                Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        <!-- Not logged in -->
                        <a asp-area="Identity"
                           asp-page="/Account/Login"
                           class="nav-link">
                            Login
                        </a>

                        <a asp-area="Identity"
                           asp-page="/Account/Register"
                           class="nav-link" >
                            Register
                        </a>
                    }
                </div>


            </div>
        </nav>
    </header>

    <!-- ================= Page Content ================= -->
    <div class="container">
        <main role="main" class="py-4">
            @RenderBody()
        </main>
    </div>

    <!-- ================= Footer ================= -->
    <footer class="glowry-footer  mt-5">
        <div class="container py-4 text-center">
            <h5 class="mb-2">Glowry</h5>
            <p class="text-muted small mb-2">
                Discover your natural glow with our premium skincare & makeup.
            </p>

            <div class="footer-links mb-3">
                <a asp-controller="Home" asp-action="Privacy">Privacy</a>
                <a asp-controller="Home" asp-action="About">About</a>
                <a asp-controller="Home" asp-action="Contact">Contact</a>
            </div>

            <small class="text-muted">
                © 2025 Glowry. All rights reserved.
            </small>
        </div>
    </footer>

    <!-- ================= Scripts ================= -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
    <script>
        window.addEventListener('scroll', () => {
            if (window.scrollY > 50) {
                document.body.classList.add('scrolled');
            } else {
                document.body.classList.remove('scrolled');
            }
        });
    </script>


</body>
</html>
