@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "All Roles";
}

<link href="~/css/addrole.css">
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&display=swap" rel="stylesheet">

<style>
    :root {
        /* Primary */
        --pink-primary: #E8609C;
        --foreground: #3D2933;
        /* Palette */
        --pink-50: #FFF5F8;
        --pink-100: #FDE8EF;
        --pink-200: #F9CFDD;
        --pink-300: #F3A6C3;
        --pink-400: #ED7AAD;
        --pink-500: #E54D91;
        --pink-600: #DF1A6E;
        /* Supporting */
        --card: #FDF8FA;
        --border: #EBDEE3;
        --muted: #F5F0F2;
    }

    .all-roles-page {
        min-height: 80vh;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        background: linear-gradient(135deg, var(--pink-50), var(--pink-100));
        padding: 40px 20px;
        font-family: 'Poppins', sans-serif;
        flex-wrap: wrap;
        gap: 20px;
    }

    .role-card {
        background: var(--card);
        border: 1px solid var(--border);
        border-radius: 22px;
        padding: 30px 25px;
        width: 250px;
        text-align: center;
        box-shadow: 0 20px 40px rgba(232, 96, 156, 0.12);
        animation: fadeUp 0.6s ease;
    }

    @@keyframes fadeUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .role-title {
        color: var(--foreground);
        font-weight: 500;
        font-size: 1.3rem;
        margin-bottom: 8px;
    }

    .role-subtitle {
        font-size: 0.9rem;
        color: #7b5a67;
    }
</style>

<div class="all-roles-page">
    @if (!Model.Any())
    {
        <div class="role-card">
            <p class="role-title">No Roles Found</p>
        </div>
    }
    else
    {
        @foreach (var role in Model)
        {
            <div class="role-card">
                <p class="role-title">@role.Name</p>
                
            </div>
        }
    }
</div>
