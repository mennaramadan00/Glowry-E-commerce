<!-- ProductOption/Delete.cshtml -->
@model Glowry.Models.ProductOption

@{
    ViewData["Title"] = "Delete Product Option";
}

<div class="container mt-4">
    <h1 class="text-danger">Delete Product Option</h1>
    <hr />

    <div class="alert alert-danger">
        <h4><i class="fas fa-exclamation-triangle"></i> Warning!</h4>
        <p>Are you sure you want to delete this product option?</p>
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Option to be Deleted</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Product</dt>
                <dd class="col-sm-9">@Model.Product?.ProName</dd>

                <dt class="col-sm-3">Attribute Name</dt>
                <dd class="col-sm-9">@Model.AttributeName</dd>

                <dt class="col-sm-3">Attribute Value</dt>
                <dd class="col-sm-9">@Model.AttributeValue</dd>

                <dt class="col-sm-3">Stock Quantity</dt>
                <dd class="col-sm-9">@Model.StockQuantity</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="OptionId" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Confirm Delete
        </button>
        <a asp-action="ManageOptions" asp-controller="Product" asp-route-id="@Model.ProId" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Cancel
        </a>
    </form>
</div>
