@model IEnumerable<Glowry.Models.ProductOption>

@{
    ViewData["Title"] = "Product Options";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Product Options</h1>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Option
        </a>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <form method="get" class="form-inline">
                <label class="mr-2">Filter by Product:</label>
                
                <a asp-action="Index" class="btn btn-secondary">Clear Filter</a>
            </form>
        </div>
        <div class="col-md-6 text-right">
            <div class="btn-group">
                <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown">
                    <i class="fas fa-filter"></i> Quick Filters
                </button>
                <div class="dropdown-menu dropdown-menu-right">
                    <a class="dropdown-item" href="?stockFilter=instock">In Stock Only</a>
                    <a class="dropdown-item" href="?stockFilter=outofstock">Out of Stock</a>
                    <a class="dropdown-item" href="?stockFilter=lowstock">Low Stock (≤10)</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card">
            <div class="card-header bg-info text-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-cog"></i> Options List (@Model.Count())</h5>
                    <span class="badge badge-light">Total Stock: @Model.Sum(o => o.StockQuantity)</span>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="thead-light">
                            <tr>
                                <th style="width: 25%;">Product</th>
                                <th style="width: 15%;">Attribute</th>
                                <th style="width: 15%;">Value</th>
                                <th style="width: 12%;">Stock</th>
                                <th style="width: 18%;">Mapped Images</th>
                                <th style="width: 15%;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProId" class="text-decoration-none">
                                            <strong>@item.Product?.ProName</strong>
                                        </a>
                                    </td>
                                    <td>
                                        <span class="badge badge-secondary">@item.AttributeName</span>
                                    </td>
                                    <td>
                                        @if (item.AttributeName?.ToLower() == "color")
                                        {
                                            <span class="badge badge-primary" style="font-size: 0.95em;">
                                                <i class="fas fa-circle"></i> @item.AttributeValue
                                            </span>
                                        }
                                        else if (item.AttributeName?.ToLower() == "size")
                                        {
                                            <span class="badge badge-info" style="font-size: 0.95em;">
                                                <i class="fas fa-ruler"></i> @item.AttributeValue
                                            </span>
                                        }
                                        else
                                        {
                                            <strong>@item.AttributeValue</strong>
                                        }
                                    </td>
                                    <td>
                                        @if (item.StockQuantity > 10)
                                        {
                                            <span class="badge badge-success badge-pill">
                                                <i class="fas fa-check-circle"></i> @item.StockQuantity
                                            </span>
                                        }
                                        else if (item.StockQuantity > 0)
                                        {
                                            <span class="badge badge-warning badge-pill">
                                                <i class="fas fa-exclamation-triangle"></i> @item.StockQuantity
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger badge-pill">
                                                <i class="fas fa-times-circle"></i> Out
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.ImageMaps != null && item.ImageMaps.Any())
                                        {
                                            <div class="d-flex align-items-center">
                                                @foreach (var map in item.ImageMaps.Take(3))
                                                {
                                                    <img src="@Url.Action("GetImage", "ProductImg", new { id = map.ImgId })" 
                                                         alt="" 
                                                         style="width: 35px; height: 35px; object-fit: cover; margin-right: 3px;" 
                                                         class="rounded border" 
                                                         title="@map.ProductImg?.Alt" />
                                                }
                                                @if (item.ImageMaps.Count() > 3)
                                                {
                                                    <span class="badge badge-secondary ml-1">+@(item.ImageMaps.Count() - 3)</span>
                                                }
                                            </div>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">
                                                <i class="fas fa-image"></i> No images
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" 
                                               asp-route-id="@item.OptionId" 
                                               class="btn btn-sm btn-info" 
                                               title="Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" 
                                               asp-route-id="@item.OptionId" 
                                               class="btn btn-sm btn-warning" 
                                               title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="MapImages" 
                                               asp-route-id="@item.OptionId" 
                                               class="btn btn-sm btn-success" 
                                               title="Map Images">
                                                <i class="fas fa-images"></i>
                                            </a>
                                            <a asp-action="Delete" 
                                               asp-route-id="@item.OptionId" 
                                               class="btn btn-sm btn-danger" 
                                               title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Statistics Cards -->
        <div class="row mt-4">
            <div class="col-md-3">
                <div class="card text-white bg-primary">
                    <div class="card-body text-center">
                        <h2 class="mb-0">@Model.Count()</h2>
                        <p class="mb-0">Total Options</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-success">
                    <div class="card-body text-center">
                        <h2 class="mb-0">@Model.Sum(o => o.StockQuantity)</h2>
                        <p class="mb-0">Total Stock</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-info">
                    <div class="card-body text-center">
                        <h2 class="mb-0">@Model.Sum(o => o.ImageMaps?.Count() ?? 0)</h2>
                        <p class="mb-0">Image Mappings</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-warning">
                    <div class="card-body text-center">
                        <h2 class="mb-0">@Model.Count(o => o.StockQuantity == 0)</h2>
                        <p class="mb-0">Out of Stock</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Grouped View by Product -->
        <div class="card mt-4">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0"><i class="fas fa-layer-group"></i> Grouped by Product</h5>
            </div>
            <div class="card-body">
                @foreach (var productGroup in Model.GroupBy(o => o.Product))
                {
                    <div class="mb-4">
                        <h5 class="border-bottom pb-2">
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@productGroup.Key?.ProId">
                                @productGroup.Key?.ProName
                            </a>
                            <span class="badge badge-primary ml-2">@productGroup.Count() options</span>
                        </h5>
                        <div class="row">
                            @foreach (var option in productGroup)
                            {
                                <div class="col-md-4 mb-3">
                                    <div class="card border-secondary">
                                        <div class="card-body p-3">
                                            <div class="d-flex justify-content-between align-items-start mb-2">
                                                <div>
                                                    <span class="badge badge-secondary mb-1">@option.AttributeName</span>
                                                    <h6 class="mb-1">@option.AttributeValue</h6>
                                                </div>
                                                @if (option.StockQuantity > 0)
                                                {
                                                    <span class="badge badge-success">@option.StockQuantity</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-danger">Out</span>
                                                }
                                            </div>
                                            
                                            @if (option.ImageMaps != null && option.ImageMaps.Any())
                                            {
                                                <div class="d-flex mb-2">
                                                    @foreach (var map in option.ImageMaps.Take(4))
                                                    {
                                                        <img src="@Url.Action("GetImage", "ProductImg", new { id = map.ImgId })" 
                                                             alt="" 
                                                             style="width: 40px; height: 40px; object-fit: cover; margin-right: 5px;" 
                                                             class="rounded border" />
                                                    }
                                                </div>
                                            }
                                            
                                            <div class="btn-group btn-group-sm w-100" role="group">
                                                <a asp-action="Edit" asp-route-id="@option.OptionId" class="btn btn-outline-warning">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="MapImages" asp-route-id="@option.OptionId" class="btn btn-outline-success">
                                                    <i class="fas fa-images"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@option.OptionId" class="btn btn-outline-danger">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body text-center py-5">
                <i class="fas fa-cog fa-4x text-muted mb-3"></i>
                <h4>No Product Options Found</h4>
                <p class="text-muted">Product options allow you to create variants like different colors, sizes, or materials.</p>
                <a asp-action="Create" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus"></i> Create Your First Option
                </a>
                <a asp-controller="Product" asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="fas fa-box"></i> View Products
                </a>
            </div>
        </div>
    }
</div>