<!-- ProductOption/Details.cshtml -->
@model Glowry.Models.ProductOption

@{
    ViewData["Title"] = "Option Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Product Option Details</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.OptionId" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="ManageOptions" asp-controller="Product" asp-route-id="@Model.ProId" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Option Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-5">Product</dt>
                        <dd class="col-sm-7">@Model.Product?.ProName</dd>

                        <dt class="col-sm-5">Attribute Name</dt>
                        <dd class="col-sm-7"><strong>@Model.AttributeName</strong></dd>

                        <dt class="col-sm-5">Attribute Value</dt>
                        <dd class="col-sm-7">@Model.AttributeValue</dd>

                        <dt class="col-sm-5">Stock Quantity</dt>
                        <dd class="col-sm-7">
                            @if (Model.StockQuantity > 0)
                            {
                                <span class="badge badge-success">@Model.StockQuantity in stock</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Out of stock</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Mapped Images (@Model.ImageMaps?.Count() ?? 0)</h5>
                </div>
                <div class="card-body">
                    @if (Model.ImageMaps != null && Model.ImageMaps.Any())
                    {
                        <div class="row">
                            @foreach (var map in Model.ImageMaps)
                            {
                                <div class="col-md-6 mb-2">
                                    <img src="@Url.Action("GetImage", "ProductImg", new { id = map.ImgId })"
                                         alt="@map.ProductImg.Alt"
                                         class="img-fluid rounded border"
                                         style="height: 100px; width: 100%; object-fit: cover;" />
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center">No images mapped to this option.</p>
                    }
                    <a asp-action="MapImages" asp-route-id="@Model.OptionId" class="btn btn-primary btn-block mt-3">
                        <i class="fas fa-images"></i> Manage Image Mappings
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>